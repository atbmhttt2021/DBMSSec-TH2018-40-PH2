<!-- Tables -->
<script type="text/javascript" src="scripts/datatables.min.js"></script>
<script type="text/javascript" src="scripts/dataTables.select.min.js"></script>
<script>
  $(document).ready(function () {
    $('#table_id').DataTable({
      columnDefs: [{
        orderable: false,
        className: 'select-checkbox',
        targets: 0
      }],
      oLanguage: {
        sSearch: "Tìm kiếm",
        oPaginate: {
          sPrevious: "Trước",
          sNext: "Sau",
        }
      },
      select: {
        style: 'single'
      },
      ordering: true,
      info: false,
      lengthChange: false,
    });

    $('#table_id tbody').on( 'click', 'tr', function () {
      if($(this).hasClass('selected')){
        $('.btn-without-selected').removeClass("disabled");
        $('.btn-with-selected').addClass("disabled");
      }else{
        $('.btn-without-selected').addClass("disabled");
        $('.btn-with-selected').removeClass("disabled");
      }
    });

  });
</script>

